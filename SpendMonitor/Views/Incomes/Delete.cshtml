@model SpendMonitor.Models.TblIncome

@{
    ViewData["Title"] = "Delete Income";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Are you sure you want to delete this income?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IncomeAmount)
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IncomeDate)
        </dd>
        <dt class="col-sm-2">
            Source
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IncomeSource)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IncomeCategoryNavigation.CategoryName)
        </dd>
        <dt class="col-sm-2">
            Account
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IncomeAccountNavigation.AccountBankName)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IncomeId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
