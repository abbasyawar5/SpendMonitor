@model SpendMonitor.Models.TblIncome

@{
    ViewData["Title"] = "Edit Income";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Income</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IncomeId" />
            <div class="form-group">
                <label class="control-label">Amount</label>
                <input asp-for="IncomeAmount" class="form-control" />
                <span asp-validation-for="IncomeAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Category</label>
                <select asp-for="IncomeCategory" class="form-control" asp-items="ViewBag.IncomeCategory"></select>
                <span asp-validation-for="IncomeCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Account</label>
                <select asp-for="IncomeAccount" class="form-control" asp-items="ViewBag.IncomeAccount"></select>
                <span asp-validation-for="IncomeAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Date</label>
                <input asp-for="IncomeDate" class="form-control" />
                <span asp-validation-for="IncomeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Source</label>
                <input asp-for="IncomeSource" class="form-control" />
                <span asp-validation-for="IncomeSource" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
